{
  "name": "promptcode-cli",
  "version": "0.1.0",
  "description": "CLI tool for PromptCode - Generate AI-ready prompts from codebases",
  "bin": {
    "promptcode": "./dist/promptcode"
  },
  "scripts": {
    "build": "bun build src/index.ts --compile --target=bun --outfile dist/promptcode",
    "dev": "bun run src/index.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@promptcode/core": "file:../core",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^11.1.0",
    "diff": "^5.2.0",
    "minimatch": "^9.0.3",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  }
}